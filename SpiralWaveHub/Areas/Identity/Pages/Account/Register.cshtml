@page
@model RegisterModel
@{
    ViewData["Title"] = "Register for SpiralWaveHub";
}


<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row">
              <div class="col-md-5 order-2 order-lg-1 m ">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4 id=" registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"  >

                 
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Input.FirstName" class="form-label" for="form3Example1c">First Name</label>
                            <input asp-for="Input.FirstName" type="text" id="form3Example1c" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Input.LastName" class="form-label" for="form3Example1c">Last Name</label>
                            <input asp-for="Input.LastName" type="text" id="form3Example1c" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Input.Email" class="form-label" for="form3Example3c">Your Email</label>
                            <input asp-for="Input.Email" type="email" id="form3Example3c" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Input.Password" class="form-label" for="form3Example4c">Password</label>
                            <input id="passInput" asp-for="Input.Password" type="password" id="form3Example4c" class="form-control" />
                            <span class="input-group-addon" role="button" title="veiw password" id="passBtn">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Input.ConfirmPassword" class="form-label" for="form3Example4cd">Repeat your password</label>
                            <input asp-for="Input.ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>
               

                </form>

              </div>
              <div class="col-md-5 order-1 order-lg-2 mb-5 d-flex flex-column flex-center">
              <div class=" register-pic-container pb-0 pb-lg-10 p-10">
                <img src="~/assets/images/logo.png" class="img-fluid img" alt="Logo image">  
                <span class="text-center caption text-gray-800 fs-2 fw-bold ">SpiralWaveHub</span>
                <br />
                <br/>
                <br/>
               
               </div>
            <div class="caption2">
                <p class="">
                    Detect Parkinson's disease in your potential patients and keep track
                    of their tests history by submitting their drawings of spiral or wave shapes.
                </p>
            </div>
            

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
 <script src="~/js/handlepassword.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}

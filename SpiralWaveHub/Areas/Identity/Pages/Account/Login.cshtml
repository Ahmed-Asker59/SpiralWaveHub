@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/assets/images/login.png" class="w-150px w-lg-500px img-fluid" alt="Sample image" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form id="account" method="post">
                    <div class="text-center mb-5 mt-2">
                        <p class="text-dark fw-bolder mt-4 fs-4 ">Sign in </p>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Email" class="form-label" for="form3Example3">Email address</label>
                        <input asp-for="Input.Email" type="email" id="form3Example3" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3"> 
                        <label asp-for="Input.Password" class="form-label" >Password</label>
                        <input asp-for="Input.Password" type="password"  class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
    
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

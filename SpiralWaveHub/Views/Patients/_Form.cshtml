@model PatientFormViewModel
<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax ="true"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage">


    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="Name" asp-for="FullName"  />
            <label asp-for="FullName"></label>
        </div>
        <span asp-validation-for="FullName" class="text-danger d-block"></span>
    </div>

    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Age" asp-for="Age"/>
            <label asp-for="Age"></label>
        </div>
        <span asp-validation-for="Age" class="text-danger d-block" ></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Email" asp-for="Email"/>
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>

    <partial name="_ModalFooter" />
</form>